# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/carelink
AZURE_SQL_CONNECTION_STRING=Server=localhost,1433;Database=carelink;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true

# FHIR Configuration
FHIR_SERVER_URL=https://hapi.fhir.org/baseR4
SMART_CLIENT_ID=carelink-client
SMART_CLIENT_SECRET=carelink-secret

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Azure Service Bus (for messaging)
SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string

# Application Insights
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Security
CORS_ORIGIN=http://localhost:5173
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000 